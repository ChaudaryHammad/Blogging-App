<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <style>
      .t {
        text-align: center;
      }

      .im {
        width: 500px;
        margin-bottom: 20px;
        margin-top: 20px;
        object-fit: cover;
      }

      p{
     text-align: justify;
      }
    </style>
    <%- include("./partials/head.ejs") %>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %> 
    <div class="container mt-5">
      <h1 style="text-decoration: underline"><%= blog.title %></h1>
      <div class="container mt-1 mb-1" >
        <span class="" style="font-weight: bold;">Writer:</span>
        <span class="badge rounded-pill text-bg-dark"> <%= blog.createdBy.fullName %></span>

  <span class="badge rounded-pill text-bg-success"><%= blog.createdAt %></span>    </div>
      <img
        src="<%= blog.coverImageURL %>"
        class="im"
        alt="cover-image"
        height="300px"
      />

      <p><%= blog.body %></p>
    </div>
<%= console.log(blog.createdBy.profileImageUrl); %>
    


    <%- include('./partials/scripts.ejs') %>
